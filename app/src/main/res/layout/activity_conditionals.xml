<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/background_gradient"
    tools:context=".ConditionalsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/type_1_layout"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_problem_con"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.05"
        android:layout_marginHorizontal="10dp"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/con_icon_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/type_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="5dp"
            android:background="@drawable/condition"
            />
        <TextView
            android:id="@+id/type_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/con_icon_1"
            app:layout_constraintRight_toLeftOf="@id/con_icon_2"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.8"
            android:text="@string/type_1"
            android:fontFamily="@font/orbitron"
            android:textColor="@color/orange_main"
            android:textAlignment="center"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/con_icon_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/type_1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="5dp"
            android:background="@drawable/condition"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





    <TextView
        android:id="@+id/tv_problem_con"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/type_1_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttons_1"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.4"
        android:textSize="10sp"
        android:padding="30dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/screen"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/tv_problem_con"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttons_2"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_answer1_con"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_answer2_con"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:padding="10dp"
            android:background="@drawable/main_buttons" />
        <Button
            android:id="@+id/btn_answer2_con"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_answer1_con"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:padding="10dp"
            android:background="@drawable/main_buttons"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.1"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/buttons_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/buttons_1">

        <Button
            android:id="@+id/btn_answer3_con"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_answer4_con"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:padding="10dp"
            android:background="@drawable/main_buttons" />
        <Button
            android:id="@+id/btn_answer4_con"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_answer3_con"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:padding="10dp"
            android:background="@drawable/main_buttons"/>

    </androidx.constraintlayout.widget.ConstraintLayout>








</androidx.constraintlayout.widget.ConstraintLayout>